{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "../../..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "baseUrl": "../../..",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "scripts/tests/parser/**/*",
    "src/**/*"
  ],
 "exclude": [
    "node_modules",
    "dist",
    "frontend"
  ]
}